<html>

<head>
    <title>Super Campaign</title>
    <style>
        .content {
                max-width: 500px;
                margin: auto;
                background: white;
                padding: 10px;
            }
            table,
            th,
            td {
                border: 1px solid black;
            }
        
        /* Set the size of the div element that contains the map */
        #map {
            height: 400px;  /* The height is 400 pixels */
            width: 100%;  /* The width is the width of the web page */
            background-color: grey;
        }
        </style>
  
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
        crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
    

    <!--
    <script type="application/json" src="locations/view-campaign-location.JSON"></script>
    <script type="text/javascript" src="/scripts/map-view.js"></script>
    -->
    <script src="http://localhost:8080/socket.io/socket.io.js"></script>
    <!--<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAkzTbqwM75PSyw0vwMqiVb9eP6NjnClFk&callback=initMap"></script>-->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.js"></script>
</head>

<body>
    <div class="content">
        <% if (id === ""){ %>
        <h2>Campaign was not found.</h2>
        <% } %>

        <h1>View a Campaign</h1>

        <h3>Campaign ID</h3>
        <p>
            <%= id %>
        </p>

        <h3>Campaign Name</h3>
        <p>
            <%= name %>
        </p>

        <h3>Start Date</h3>
        <p>
            <%= sDate %>
        </p>

        <h3>End Date</h3>
        <p>
            <%= endDate %>
        </p>

        <h3>Estimated Visit Duration</h3>
        <p>
            <%= duration %>
        </p>

        <h3>Assignment</h3>
        <p>
            <%= assignment %>
        </p>

        <h3>Campaign Managers</h3>
        <table>
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
            <% for (var i = 0; i < manager.length; i++){ %>
            <tr>
                <td>
                    <%= manager[i].ID.employeeID %>
                </td>
                <td>
                    <%= manager[i].ID.name %>
                </td>
            </tr>
            <% } %>
        </table>
        <br>

        <h3>Canvassers</h3>
        <table>
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
            <% for (var i = 0; i < canv.length; i++){ %>
            <tr>
                <td>
                    <%= canv[i].ID.employeeID %>
                </td>
                <td>
                    <%= canv[i].ID.name %>
                </td>
            </tr>
            <% } %>
        </table>
        <br>

        <h3>Questionaire</h3>
        <table>
            <% for(var i=0; i < question.length; i++){ %>
            <tr>
                <td>
                    <%= question[i].question %>
                </td>
            </tr>
            <% } %>
        </table>
        <br>

        <h3>Talking Points</h3>
        <table>
            <% for(var i=0; i < points.length; i++){ %>
            <tr>
                <td>
                    <%= points[i].talk %>
                </td>
            </tr>
            <% } %>
        </table>
        <br>

        <h3>Locations</h3>
        <table>
            <tr>
                <th>Street Number</th>
                <th>Street</th>
                <th>Unit</th>
                <th>City</th>
                <th>State</th>
                <th>Zip Code</th>
            </tr>
            <% for(var i=0; i < locationz.length; i++){ %>
            <tr>
                <td>
                    <%= locationz[i]._streetNumber %>
                </td>
                <td>
                    <%= locationz[i]._street %>
                </td>
                <td>
                    <%= locationz[i]._unit %>
                </td>
                <td>
                    <%= locationz[i]._city %>
                </td>
                <td>
                    <%= locationz[i]._state %>
                </td>
                <td>
                    <%= locationz[i]._zipcode %>
                </td>
                <td classname="geocodes" style="display: none;">
                    <%= locationz[i]._lat %>
                </td>
            </tr>
            <% } %>
        </table>

        <div id="map"></div>

        <script>
            var map;
            var uluru = {lat: -25.344, lng: 131.036};

            function initMap() {
                map = new google.maps.Map(document.getElementById('map'), {
                    center: uluru,
                    zoom: 4
                });
            }


            var markers = [];
            var getMarkerUniqueId = function(lat, lng) {
                return lat + '_' + lng;
            }
            function addMarker(location) {
                var markerId = getMarkerUniqueId(location.lat, location.lng);
                var marker = new google.maps.Marker({
                    position: location,
                    map: map,
                    animation: google.maps.Animation.DROP,
                    id: markerId
                });
                markers[markerId] = marker;
            }
            var removeMarker = function(marker, markerId) {
	            marker.setMap(null); // set markers setMap to null to remove it from map
	            delete markers[markerId]; // delete marker instance from markers object
            }; 
            
            var socket = io();
            $(document).ready(function() {
                
                socket.on('geocodes', function(geocodes) {
                    centerGeocode = {lat: parseFloat(geocodes[0].lat), lng: parseFloat(geocodes[0].lng)};
                    console.log("FRONT:" + geocodes);
                    console.log("GEOCODE" + centerGeocode);
                    addMarker(uluru);

                    addMarker(centerGeocode);
                });
                
            });
            
        </script>    
        <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAkzTbqwM75PSyw0vwMqiVb9eP6NjnClFk&callback=initMap"></script>

    </div>

</body>
<script type="text/javascript" src="/scripts/map-view.js" async defer></script>

</html>