<html>

<head>
    <title>Super Campaign</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
        crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
    <script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyAkzTbqwM75PSyw0vwMqiVb9eP6NjnClFk"></script>
    <script type="application/json" src="locations/view-campaign-location.JSON"></script>
    <!-- <script type="text/javascript" src="map-view.js"></script> -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.js"></script>
    <script>
        // var map;
        // var marker = [];
        // setInterval(function () {
        // }, 10000);
        // var geocodes;
        function initialize() {
            var mapProp = {
                center: new google.maps.LatLng(40.7128, -74.0060),
                zoom: 7,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };
            var map = new google.maps.Map(document.getElementById("map"), mapProp);
            // google.maps.event.trigger(map, 'resize');

            var room = "view"
            var socket = io.connect('http://localhost:8080');
            socket.on('connect', function () {
                socket.emit('room', room);
            })
            socket.on('view-campaign-geocodes', function (geocode) {
                loadMarkers(geocode);
                // geocodes = geocode;
            });
        }
        
        function loadMarkers() {
            for (let i in geocodes) {
                var coord = new google.maps.LatLng(geocodes[i].lat, geocodes[i].lng);
                alert(coord);
                var marker = new google.maps.Marker({
                    map: map,
                    position: coord
                });
            }
            // marker.setMap(map);
            // location.reload(true);
        }

        google.maps.event.addDomListener(window, 'load', initialize);
    </script>
    <style>
        .content {
            max-width: 500px;
            margin: auto;
            background: white;
            padding: 10px;
        }
        table,
        th,
        td {
            border: 1px solid black;
        }
    </style>
</head>

<body>
    <div class="content">
        <% if (id === ""){ %>
        <h2>Campaign was not found.</h2>
        <% } %>

        <h1>View a Campaign</h1>

        <h3>Campaign ID</h3>
        <p>
            <%= id %>
        </p>

        <h3>Campaign Name</h3>
        <p>
            <%= name %>
        </p>

        <h3>Start Date</h3>
        <p>
            <%= sDate %>
        </p>

        <h3>End Date</h3>
        <p>
            <%= endDate %>
        </p>

        <h3>Estimated Visit Duration</h3>
        <p>
            <%= duration %>
        </p>

        <h3>Assignment</h3>
        <p>
            <%= assignment %>
        </p>

        <h3>Campaign Managers</h3>
        <table>
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
            <% for (var i = 0; i < manager.length; i++){ %>
            <tr>
                <td>
                    <%= manager[i].ID.employeeID %>
                </td>
                <td>
                    <%= manager[i].ID.name %>
                </td>
            </tr>
            <% } %>
        </table>
        <br>

        <h3>Canvassers</h3>
        <table>
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
            <% for (var i = 0; i < canv.length; i++){ %>
            <tr>
                <td>
                    <%= canv[i].ID.employeeID %>
                </td>
                <td>
                    <%= canv[i].ID.name %>
                </td>
            </tr>
            <% } %>
        </table>
        <br>

        <h3>Questionaire</h3>
        <table>
            <% for(var i=0; i < question.length; i++){ %>
            <tr>
                <td>
                    <%= question[i].question %>
                </td>
            </tr>
            <% } %>
        </table>
        <br>

        <h3>Talking Points</h3>
        <table>
            <% for(var i=0; i < points.length; i++){ %>
            <tr>
                <td>
                    <%= points[i].talk %>
                </td>
            </tr>
            <% } %>
        </table>
        <br>

        <h3>Locations</h3>
        <table>
            <tr>
                <th>Street Number</th>
                <th>Street</th>
                <th>Unit</th>
                <th>City</th>
                <th>State</th>
                <th>Zip Code</th>
            </tr>
            <% for(var i=0; i < location.length; i++){ %>
            <tr>
                <td>
                    <%= location[i]._streetNumber %>
                </td>
                <td>
                    <%= location[i]._street %>
                </td>
                <td>
                    <%= location[i]._unit %>
                </td>
                <td>
                    <%= location[i]._city %>
                </td>
                <td>
                    <%= location[i]._state %>
                </td>
                <td>
                    <%= location[i]._zipcode %>
                </td>
            </tr>
            <% } %>
        </table>

        <div id="map" style="width:500px;height:380px;" onload='markers()'>
        </div>
        <button id="markers" onclick="loadMarkers()">Map Locations</button>
    </div>
</body>

</html>