<% include ./partials/header %>

<div>
    <table>
        <tr>
            <th>Task ID</th>
            <th>Canvasser</th>
            <th>Scheduled On</th>
            <th>Task Status</th>
            <th>Number of Locations</th>
            <th>Duration</th>
        </tr>
        <% for (var i=0; i < tasks.length; i++ ) { %>

        <div style="border: 5px;margin: auto;">
        <form id='forms<%= tasks[i]._ID %>' action='/manager/view-assignment-detail' method='POST'>
        <tr onclick="document.getElementById('forms<%= tasks[i]._ID %>').submit()">

            <td>
                <input type="text" name="taskID" value="<%= tasks[i]._ID %>">
            </td>
            <input type="hidden" name="campaignID" value="<%= campaignID %>">
            <input type="hidden" name="canvasserID" value="<%= id %>">

            <td>
                <%= tasks[i]._canvasser %>
            </td>

            <td>
                <%= tasks[i]._scheduledOn %>
            </td>

            <td>
                <% if (tasks[i]._status == true) { %>
                Completed
                <% } else { %>
                Active
                <% } %>
            </td>

            <td>
                <%= tasks[i]._numLocations %>
            </td>

            <td>
                <%= tasks[i]._duration %>
            </td>
        </tr>
        <!-- <input type="submit" value="Details"> -->
        </form>
        </div>
        <% } %>
    </table>
</div>

<% include ./partials/footer %>