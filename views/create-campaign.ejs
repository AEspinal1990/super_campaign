<% include ./partials/header %>

	<div class="container">

        <h1>Create a Campaign</h1>
        
		<form action="/campaign" method="POST">
	  		<div class="form-group">
			    <label>Campaign Name</label>
			    <input type="text" name="campaign[campaignName]" class="form-control" placeholder="Campaign Name">
              </div>
            <div class="form-group">
                <label>Start Date</label>
                <input type="text" name="campaign[startDate]" class="form-control" placeholder="YYYY-MM-DD">
            </div>
            <div class="form-group">
                <label>End Date</label>
                <input type="text" name="campaign[endDate]" class="form-control" placeholder="YYYY-MM-DD">
            </div>           
            <div class="form-group">
                <label for="talkingPoints">Talking Points</label>
                <textarea class="form-control" id="talkingPoints" name="user[talkingPoints]" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label for="questionaire">Questionaire</label>
                <textarea class="form-control" placeholder="One question per line." id="questionaire" name="user[questionaire]" rows="3"></textarea>
            </div>		
            <div class="form-group">
                <label>Expected Visit Duration</label>
                <input type="text" name="user[averageExpectedDuration]" class="form-control" placeholder="YYYY-MM-DD">
            </div>      		 
            <div class="form-group">
                <label for="locations">Locations</label>
                <textarea class="form-control" id="locations" name="user[locations]" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label for="locations">Canvassers</label>
                <textarea class="form-control" placeholder="ID of each canvasser seperated by space" id="canvassers" name="user[canvassers]" rows="3"></textarea>
            </div>      
  	
		  <button type="submit" class="btn btn-default">Submit</button>
		</form>

	</div><!-- Close container -->

<% include ./partials/footer %>